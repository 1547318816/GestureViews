<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="App" />

    <style name="App.Toolbar">
        <item name="android:id">@id/toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="App.Toolbar.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="App.ToolbarShadow">
        <item name="android:layout_marginTop">?actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/shadow</item>
        <item name="android:background">@drawable/shadow_top</item>
    </style>

    <style name="App.Button" parent="Widget.AppCompat.Button" />

    <style name="App.Button.Error">
        <item name="colorButtonNormal">@color/error_color</item>
    </style>

    <style name="App.Button.Accent">
        <item name="android:theme">@style/App.AccentButtonTheme</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.Button.Inverse
        </item>
    </style>

    <style name="App.AccentButtonTheme">
        <item name="colorButtonNormal">?colorAccent</item>
    </style>

    <style name="App.ImageText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="App.Demo" />

    <style name="App.Demo.ExpandedTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#002E7D32</item>
    </style>

</resources>
